<%- include ('../partials/header') %>

<div class="container" style="width: 100%;">
    
    <header class="jumbotron" style="width: 50%; margin-left: 25%; margin-top: 20px;">
        <h1>comment here!</h1>
    </header>

    <div class="container" style="width: 40%;">
        <form action="/pets/<%= pet_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label><strong>Comment:</strong></label>
                <input type="text" class="form-control" value="<%= comment.text %>" name="comment[text]" required>
            </div>
            <button class="btn btn-lg btn-block btn-success">Save Changes</button>
        </form>
    </div>

</div>

<%- include ('../partials/footer') %>