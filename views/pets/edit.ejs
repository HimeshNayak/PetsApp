<%- include ('../partials/header') %>

<div class="container" style="width: 35%;">
    <h1 style="text-align: center;">Edit <%= pet.name %></h1>

    <form action="/pets/<%= pet._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label> <strong>Name:</strong> </label>
            <input type="text" class="form-control" value="<%=pet.name%>" name= "pet[name]">
        </div>

        <div class="form-group">
            <label> <strong>Species:</strong> </label>
            <input type="text" class="form-control" value="<%=pet.species%>" name= "pet[species]">
        </div>

        <div class="form-group">
            <label> <strong>Image Url:</strong> </label>
            <input type="text" class="form-control" value="<%=pet.image%>" name= "pet[image]">
        </div>

        <div class="form-group">
            <label> <strong>Description:</strong> </label>
            <textarea class="form-control" name= "pet[description]"><%= pet.description %>
            </textarea>
        </div>

        <button class="btn btn-lg btn-success">SAVE CHANGES</button>
    </form>

</div>

<%- include ('../partials/footer') %>